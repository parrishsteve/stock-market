<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="SymbolTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/symbol_large</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SymbolTitleLight" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Label" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GraphTheme">
        <item name="android:background">@color/off_white</item>
        <item name="backgroundColor">@color/off_white</item>
        <item name="graphBackgroundColor">@color/off_white</item>
        <item name="gridBackgroundColor">@color/ap_white</item>
        <item name="domainLineColor">@color/ap_gray</item>
        <item name="rangeLineColor">@color/ap_gray</item>
        <item name="lineLabelTextColorTop">@color/ap_charcoal</item>
        <item name="lineLabelTextColorBottom">@color/ap_charcoal</item>
        <item name="lineLabelTextColorLeft">@color/ap_charcoal</item>
        <item name="lineLabelTextColorRight">@color/ap_charcoal</item>
        <item name="domainOriginLineColor">@color/ap_charcoal</item>
        <item name="rangeOriginLineColor">@color/ap_charcoal</item>
        <item name="titleTextColor">@color/ap_black</item>
        <item name="domainTitleTextColor">@color/ap_black</item>
        <item name="rangeTitleTextColor">@color/ap_black</item>
        <item name="legendTextColor">@color/ap_black</item>
    </style>

    <style name="Value" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Exchange" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OpenPrice" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/price_last_close</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CurrentPriceUp" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CurrentPriceDown" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DayChangeUp" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/price_current_up</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DayChangeDown" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/price_current_down</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CurrentPrice" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/price_last_close</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DayLowPrice" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DayHighPrice" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
